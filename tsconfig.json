{
  "compilerOptions": {
    "strict": true,
    "strictFunctionTypes": true,
    "noEmitOnError": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "esModuleInterop": true,

    "outDir": "libs",
    "noUnusedLocals": true,
    "noImplicitReturns": false,
    "strictNullChecks": true,
    "declaration": true,
    "removeComments": false
  },
  "include": ["src/**/*"]
}
